<body>
  <!-- Prompt IE 6 users to install Chrome Frame. Remove this if you support IE 6.
       chromium.org/developers/how-tos/chrome-frame-getting-started -->
  <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
    <header>
        <% if (! settings.hide_navbar) { %>
            <div class="navbar">
                <ul>
                    <%
                    var sites = [
                            { name: 'home', 
                              href: settings.base_url, 
                              dropdown: [
                                { name: 'about', href: settings.base_url + '/about' },
                                { name: 'contact', href: settings.base_url + '/contact' },
                              ],
                            },
                            { name: 'corridor', href: 'corridor.' + settings.base_url },
                            { name: 'fortune cookie', href: 'fortunecookie.' + settings.base_url },
                            { name: 'markslist', href: 'markslist.' + settings.base_url },
                            { name: 'minesweeper', href: 'minesweeper.' + settings.base_url },
                            { name: 'wishing well', href: 'wishingwell.' + settings.base_url },
                            { name: 'text', href: 'text.' + settings.base_url },
                            <!-- temporarily removed { name: 'magi-cal', href: 'magi-cal.me' }, -->
                            { name: 'ETS', href: 'etstutoring.org' },
                        ],
                        i,
                        j,
                        len,
                        len2,
                        pagename,
                        pagehref,
                        site_name,
                        site_href,
                        site_dropdown;

                    for (i = 0, len = sites.length; i < len; i++) {
                        site_name = sites[i].name;
                        site_href = sites[i].href;
                        site_dropdown = sites[i].dropdown;
                    %>
                        <li>
                            <a href="<%= settings.protocol %>://<%= site_href %>"
                                <%
                                if (settings.site_name === site_name) { %>
                                    class="current_site"
                                <% } %>
                            ><%= site_name.toUpperCase() %></a>
                           <!--write nested ul for dropdowns-->
                            <% if (site_dropdown !== undefined ) { %>
                              <ul>
                              <% for (j=0, len2 = site_dropdown.length; j < len2; j++) {
                                pagename = site_dropdown[j].name;
                                pagehref = site_dropdown[j].href;
                                %>
                                <li>
                                  <a href="<%= settings.protocol %>://<%= pagehref %>"> <%= pagename %> </a>
                                </li>
                              <% } %>  
                              </ul>
                            <% } %>
                        </li>
                    <% } %>
                    <!-- Combined Register/Login Dropdown-->
                    <li class="right">
                      <% if (locals.username) { %>
                        <a href="/logout">Logout <%= locals.username.toUpperCase() %></a>
                      <% } else { %>
                        <a href="#" id="login_trigger">Login/Register</a>
                      <% } %>

                    <!--Login div-->
                    <% if (! locals.username) { %>
                    <div id="login" class="dropdown_form">
                      <form action="/login" method="post">
                        <div class="username">
                          <label>Username:</label>
                          <input type="text" name="username" placeholder="username" autofocus /><br/>
                        </div>
                        <div class="password">
                          <label>Password:</label>
                          <input type="password" name="password" placeholder="password" />
                        </div>
                        <div class="submit_button">
                          <input type="submit" value="Login" class="button" />
                        </div>
                      </form>
                        <!-- Register form div-->
                      <form action="/register" method="post">
                          <div class="username">
                              <label>Username:</label>
                              <input type="text" name="username" placeholder="username" autofocus /><br/>
                          </div>
                          <div class="password">
                              <label>Password:</label>
                              <input type="password" name="password" placeholder="password" />
                          </div>
                          <div class="password">
                              <label>Confirm Password:</label>
                              <input type="password" name="password2" placeholder="re-type password" />
                          </div>
                          <div class="submit_button">
                              <input type="submit" value="Register" class="button"/>
                          </div>
                      </form>
                      <!--Guest Access button, to add later
                      <div>
                        <input type="submit" value="Guest Access" class="button" />
                      </div>  -->
                    </div><!-- end of login div-->
                      
                        <% } %>                      
                    </li>


                </ul>
            </div>
        <% } %>
        <% if (settings.show_banner) { %>
            <div class="banner">
                <a href="<%= settings.protocol %>://<%= settings.base_url %>">
                    <img src="<%= settings.protocol %>://<%= settings.base_url %>/img/aybanner3.png" title="ayoshitake.com" />
                </a>
                <h3 id="under_construction">PERMANENTLY UNDER CONSTRUCTION</h3>
            </div>
        <% } %>
    </header>